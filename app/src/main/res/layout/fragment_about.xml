<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.qthjen_dev.deviceinfo.Fragment.AboutFragment">

    <TextView
        android:layout_above="@+id/aboutline2"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/smallMargin"
        android:paddingLeft="@dimen/mediumMargin"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/mediumText"
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_above="@+id/aboutline3"
        android:gravity="center"
        android:layout_marginTop="@dimen/smallMargin"
        android:paddingLeft="@dimen/mediumMargin"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/mediumText"
        android:id="@+id/aboutline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/smallMargin"
        android:paddingLeft="@dimen/mediumMargin"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/mediumText"
        android:id="@+id/aboutline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_below="@+id/aboutline3"
        android:layout_marginTop="@dimen/smallMargin"
        android:paddingLeft="@dimen/mediumMargin"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/mediumText"
        android:id="@+id/aboutline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
