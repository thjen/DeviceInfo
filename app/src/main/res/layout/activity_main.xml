<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgdark"
    tools:context="io.qthjen_dev.deviceinfo.Activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_layout"
            android:id="@+id/tbar_main"/>

        <android.support.design.widget.TabLayout
            app:tabSelectedTextColor="@color/white"
            app:tabMode="scrollable"
            app:tabTextColor="@color/textWhite"
            android:id="@+id/tab_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/mainMargin"
        app:cardElevation="@dimen/largeElevation"
        app:cardCornerRadius="@dimen/mediumRadius"
        app:cardUseCompatPadding="true"
        android:background="@color/bg"
        android:layout_below="@+id/appbar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:background="@color/bg"
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </android.support.v7.widget.CardView>


</RelativeLayout>
